<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<p>
	
	Visitas: <%= @article.visits_count %>
</p>

<% unless @article.user.nil? %>
<p>Escrito por <%= @article.user.email %></p>
<%end%>

<h2>Coemtarios </h2>
 <%= render "comments/form" %>

 <ul id="comments-box">
 	<% @article.comments.each do |comment| %>
 	  <li><%= comment.body %> -<%= comment.user.email %> <li>
 	<%end%>

 </ul>
<div>
	
	<%= link_to "Editar", edit_article_path(@article) %>
</div>



