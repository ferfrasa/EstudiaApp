<% @articles.each do |article| %>
  <h1><%= link_to article.title, article %></h1>
  <div>
	 <%= article.body %> - <%= link_to "Eliminar", article, method: :delete %>
     <% if article.may_publish? #de la gema de estados %>
      <%= article.body %> - <%= link_to "Publicar", "/articles/#{article.id}/publish", method: :put %>
     <%end%>
  </div>
<%end%>